<UserControl x:Class="Carpool.App.View.CreateRideControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Carpool.App.View"
             xmlns:viewModel="clr-namespace:Carpool.App.ViewModel"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             d:DataContext="{d:DesignInstance viewModel:RideDetailViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="334"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="76*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="45*"/>

        </Grid.RowDefinitions>
        <Rectangle 
            Grid.Row="6"
            Grid.RowSpan="3" Margin="34,5,1,5" RadiusX="10" RadiusY="10" Fill="#FFC4C4C4"
         
         />
        <TextBox
            x:Name="TextBoxArrivalCreateRides" Margin="44,13,10,13"
            TextWrapping="Wrap"
            Background="#FFEDEDED"
            BorderBrush="{x:Null}" TextChanged="TextBoxStateCreateRides_TextChanged" Grid.Row="7" Height="50"/>

        <Label
            Margin="45,5,223,0"
            Content="Arrival"
            Background="{x:Null}"
            BorderBrush="{x:Null}" Grid.Row="6" Height="23" VerticalAlignment="Top" />

        <DatePicker
            Grid.Column="0"
            x:Name="TextBoxDate_arrCreateRides"
            Margin="45,10,144,0"
            BorderBrush="{x:Null}" Grid.Row="8" Height="23" VerticalAlignment="Top"
            />
        <Rectangle
            Grid.RowSpan="3" Margin="33,10,2,7" RadiusX="10" RadiusY="10" Fill="#FFC4C4C4" Grid.Row="1"
         
         />
        <TextBox
            x:Name="TextBoxArrivalCreateRides_Copy" Margin="44,10,10,10"
            TextWrapping="Wrap"
            Background="#FFEDEDED"
            BorderBrush="{x:Null}" TextChanged="TextBoxStateCreateRides_TextChanged" Grid.Row="2" Height="50"/>

        <Label
            Margin="44,15,224,0"
            Content="Departure"
            Background="{x:Null}"
            BorderBrush="{x:Null}" Height="30" VerticalAlignment="Top" Grid.Row="1" />
        <DatePicker
            Grid.Column="0"
            x:Name="TextBoxDate_arrCreateRides_Copy"
            Margin="45,5,144,10"
            BorderBrush="{x:Null}" Grid.Row="3"
            />

    </Grid>
</UserControl>
