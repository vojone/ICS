<Window x:Class="Carpool.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Carpool.App"
        xmlns:view="clr-namespace:Carpool.App.View"
        mc:Ignorable="d"
        Title="LoginScreen" Height="450" Width="800"
        DataContext="{StaticResource LoginScreenViewModel}"
        >

    <Grid Background="#FFA1A1A1">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="27*"/>
        </Grid.RowDefinitions>
        
        <Rectangle x:Name="TopBar" Fill="#FFC4C4C4" Margin="0,8,0,8" Grid.ColumnSpan="3"/>
        
        <Button x:Name="ButtonCreateUser" 
                Content="Create New User" 
                Margin="0,12,10,12" Background="#FF005FB8" HorizontalAlignment="Right" Width="105"/>

        <TextBox IsReadOnly="True" x:Name="TextBox1" Margin="10,0,0,0" TextWrapping="Wrap" Text="Please select the user" Background="{x:Null}" FontSize="18" BorderBrush="{x:Null}" HorizontalAlignment="Left" Width="209" VerticalAlignment="Center"/>
        <view:LoginWindowControl Margin="73,10,81,10" Grid.Row="1" Width="650"/>
    </Grid>

</Window>
